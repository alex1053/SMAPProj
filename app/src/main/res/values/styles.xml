<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyButtons">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/basicAppColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityHeader">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/basicAppColor</item>
    </style>

    <style name="AppHeader">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/basicAppColor</item>
    </style>

    <style name="Currency">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InputHeader">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MealName">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListViewInfo">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/basicAppColor</item>
    </style>

</resources>
