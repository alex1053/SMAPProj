<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="368dp"
        android:layout_height="77dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="142dp">

        <TextView
            android:id="@+id/txtMealName"
            style="@style/MealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtPortions"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:text="Lasagna" />

        <TextView
            android:id="@+id/txtPrice"
            style="@style/ListViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtPortions"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:text="39 DKK" />

        <TextView
            android:id="@+id/txtPortions"
            style="@style/ListViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtLocation"
            android:layout_alignBottom="@+id/txtLocation"
            android:layout_centerHorizontal="true"
            android:text="4 Portions Left"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="67dp" />

        <TextView
            android:id="@+id/txtLocation"
            style="@style/ListViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="Aarhus N" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>